{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "reviewers": ["thehedgefrog"],
  "assignees": ["thehedgefrog"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor","patch"],
      "automerge": true
    },
    {
      "matchManagers": ["dockerfile"],
      "addLabels": ["docker"]
    },
    {
      "matchManagers": ["terraform"],
      "addLabels": ["terraform"]
    },
    {
      "matchDepTypes": ["action"],
      "addLabels": ["actions"]
    }
  ]
}